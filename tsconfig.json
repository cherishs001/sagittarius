{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "outDir": "./build/lib",
      "declaration": true,
      "declarationDir": "./build/@types",
      "sourceMap": true,
      "removeComments": true,
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": [
        "node_modules/@types",
        "typings"
      ]
    },
    "compileOnSave": true,
    "includes": [
      "lib/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "test"
    ]
  }
